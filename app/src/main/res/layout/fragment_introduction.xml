<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appName"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="E-Shop"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleApp"
        style="@style/h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="The Right place \n For Buying used \n Laptops and Smartphones"
        android:textAlignment="center"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="@+id/appName"
        app:layout_constraintStart_toStartOf="@+id/appName"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <TextView
        android:id="@+id/appDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/h2"
        android:gravity="center"
        android:textAlignment="center"
        android:text="It is now very easy to buy used product \n accroding to your budget"
        app:layout_constraintEnd_toEndOf="@+id/titleApp"
        app:layout_constraintStart_toStartOf="@+id/titleApp"
        app:layout_constraintTop_toBottomOf="@+id/titleApp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        style="@style/blueButtonStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/appDesc"
        app:layout_constraintStart_toStartOf="@+id/appDesc"
        app:layout_constraintTop_toBottomOf="@+id/appDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>